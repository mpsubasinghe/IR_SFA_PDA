<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1.1"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView22s"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="RepID :"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:layout_weight="4"
            android:id="@+id/textViewId" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1.1"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView222s"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Distributor :"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textViewName" android:layout_gravity="right|center_vertical" android:paddingTop="6dp"
            android:paddingLeft="6dp" android:textSize="17dp" android:textStyle="bold"/>


    </LinearLayout>




</LinearLayout>